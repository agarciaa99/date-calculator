<section class="max-w-full max-h-dvh mt-8 mx-2 sm:mx-0">
  <h1 class="text-center text-3xl sm:text-4xl font-semibold tracking-wide">
    Calculadora de Reducción de Sentencia
  </h1>

  <form id="calculator" class="w-full sm:w-2/4 lg:w-1/4 mx-auto mt-10">
    <div class="mb-4">
      <label for="years" class="block text-lg font-light tracking-widest mb-2"
        >Años</label
      >
      <input
        type="number"
        id="years"
        name="years"
        min="0"
        required
        placeholder="Ejemplo: 2"
        class="w-full py-1 px-2 block border-2 border-gray-500 rounded-md"
      />
      <div class="error-message" id="error-years"></div>
    </div>
    <div class="mb-4">
      <label for="months" class="block text-lg font-light tracking-widest mb-2"
        >Meses</label
      >
      <input
        type="number"
        id="months"
        name="months"
        min="0"
        required
        placeholder="Ejemplo: 5"
        class="w-full py-1 px-2 block border-2 border-gray-500 rounded-md"
      />
      <div class="error-message" id="error-months"></div>
    </div>
    <div class="mb-4">
      <label for="days" class="block text-lg font-light tracking-widest mb-2"
        >Días</label
      >
      <input
        type="number"
        id="days"
        name="days"
        min="0"
        required
        placeholder="Ejemplo: 22"
        class="w-full py-1 px-2 block border-2 border-gray-500 rounded-md"
      />
      <div class="error-message" id="error-days"></div>
    </div>
    <div class="mb-4">
      <label
        for="fraction"
        class="block text-lg font-light tracking-widest mb-2">Fracción</label
      >
      <input
        type="text"
        id="fraction"
        name="fraction"
        required
        placeholder="Ejemplo: 1/3"
        class="w-full py-1 px-2 block border-2 border-gray-500 rounded-md"
      />
      <div class="error-message" id="error-fraction"></div>
    </div>
    <div class="flex justify-center space-x-8 mt-12">
      <button
        type="submit"
        class="border-2 border-blue-500 bg-blue-500 text-white rounded px-6 py-2 font-bold tracking-wide uppercase hover:bg-blue-700 duration-300 ease-in-out"
        >Calcular</button
      >
      <button
        type="reset"
        id="reset-button"
        class="border-2 border-red-500 bg-red-500 text-white rounded px-6 py-2 font-bold tracking-wide uppercase hover:bg-red-700 duration-300 ease-in-out"
        >Resetear</button
      >
    </div>
  </form>
  <div id="result" class="text-center text-lg mt-6 font-medium text-green-600">
  </div>
  <script src="/src/scripts/calculator.js"></script>
</section>
